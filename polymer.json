      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    },
    {
      "preset": "es6-bundled",
      "addServiceWorker": false,
      "bundle": true,
      "js": {
        "minify": true,
        "compile": "es2015",
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      }
    }
  ]
}
