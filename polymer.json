  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "builds": [
    {
      "preset": "es5-bundled",
      "addServiceWorker": false,
      "bundle": true,
      "js": {
        "minify": true,
        "compile": "es5",
